<h1>Your Favorites</h1>
<p class="caption">ユーザー情報</p>
<%= @user.email %>
<%= link_to 'Edit', edit_user_path(current_user.id) %>

<p>お気に入り一覧</p>
<div class="faq">
	<% @user.favorites.each do |favorite| %>
    <ul id="faq-list">
      <li class="faq-list-item">
        <p class="question"><%= favorite.joke.e_body %></p>
        <span>+</span>
        <div class="answer">
            <p class="a" >和訳のPick Up Lines</p>
			<%= favorite.joke.j_body %>
			<p class="a" >英文のPick Up Linesの説明</p>
			<%= favorite.joke.e_caption %>
			<p class="a" >和文のPick Up Lines説明</p>
			<%= favorite.joke.j_caption %>
			<p class="a" >ローマ字のPick Up Lines発音</p>
			<%= favorite.joke.e_speak %>
			<p class="a" >カタカナのPick Up Lines発音</p>
			<%= favorite.joke.j_speak %>
			<%= link_to "Show", joke_path(favorite.joke.id) %>
			<% if favorite.joke.favorited_by?(current_user) %>
			  <li>
			    <%= link_to joke_favorites_path(favorite.joke.id), method: :delete do %>
			      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
			      <%= favorite.joke.favorite.count %>
			    <% end %>
			  </li>
			<% else %>
			  <li>
			    <%= link_to joke_favorites_path(favorite.joke.id), method: :post do %>
			      <i class="fa fa-heart-o" aria-hidden="true"></i>
			      <%= favorite.joke.favorite.count %>
			    <% end %>
			  </li>
			<% end %>
        </div>
      </li>
    </ul>
<% end %>
